<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/principal"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.itsTimeToMovie.UI.DetalhesFilmeActivity"
        android:background="@color/principal">


        <Button
            android:id="@+id/Compartilhar_button"
            android:layout_width="204dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/description_filme"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="90dp"
            android:backgroundTint="@color/Bttn"
            android:text="Compartilhar com um amigo"
            android:textSize="12dp"
            android:textColor="@color/letras"
            app:cornerRadius="26dp"
        />

        <TextView
            android:id="@+id/description_filme"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_filme_Title_Detail"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/letras"
            android:textSize="20dp"
            tools:text="description" />

        <TextView
            android:id="@+id/text_filme_Title_Detail"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagePoster_Detail"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="90dp"
            android:padding="16dp"
            android:textAlignment="center"
            android:textColor="@color/letras"
            android:textSize="25dp"
            tools:text="teste" />

        <ImageView
            android:id="@+id/imagePoster_Detail"
            android:layout_width="231dp"
            android:layout_height="314dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="90dp"
            android:scaleType="fitXY" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Compartilhar_button"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="120dp"
            android:text="Adicionar aos Favoritos"
            android:textSize="10dp"
            android:textColor="@color/letras"
            android:backgroundTint="@color/Button"
            app:cornerRadius="26dp"/>



    </RelativeLayout>
</ScrollView>